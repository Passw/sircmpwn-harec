#!/bin/sh -e
srcdir=${SRCDIR:-$(dirname "$0")}
eval ". $srcdir/config.sh"

harec() {
	genrules harec \
		src/check.c \
		src/emit.c \
		src/gen.c \
		src/identifier.c \
		src/lex.c \
		src/main.c \
		src/parse.c \
		src/qbe.c \
		src/qtype.c \
		src/trace.c \
		src/type_store.c \
		src/types.c \
		src/utf8.c \
		src/util.c
}

all="harec"

run_configure
