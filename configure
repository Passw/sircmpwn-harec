#!/bin/sh -e
srcdir=${SRCDIR:-$(dirname "$0")}

eval ". $srcdir/config.sh"

harec() {
	genrules harec \
		src/check.c \
		src/emit.c \
		src/eval.c \
		src/gen.c \
		src/identifier.c \
		src/lex.c \
		src/main.c \
		src/mod.c \
		src/parse.c \
		src/qbe.c \
		src/qinstr.c \
		src/qtype.c \
		src/scope.c \
		src/tags.c \
		src/type_store.c \
		src/typedef.c \
		src/types.c \
		src/utf8.c \
		src/util.c
}

all="harec"

subdir rt
subdir tests

run_configure
